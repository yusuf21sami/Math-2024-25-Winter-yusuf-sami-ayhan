# Print the Taylor series
print("Taylor series for f(x) = cos(x) around x = 0:")
print(f_taylor)
print("\nTaylor series for h(x) = 1/(1-x) around x = 0:")
print(h_taylor)
print("\nTaylor series for g(x) = sin(x) around x = pi:")
